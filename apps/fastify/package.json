{
  "name": "fastify",
  "version": "1.0.0",
  "main": "./src/main.ts",
  "scripts": {
    "auth:generate": "cross-env NODE_ENV=development npx @better-auth/cli@latest generate --output ./src/routes/auth/auth.schema.ts",
    "db:generate": "cross-env NODE_ENV=development npx drizzle-kit generate --config ./drizzle.config.ts",
    "db:migrate": "cross-env DB_MIGRATING=true npx drizzle-kit push --config ./drizzle.config.ts",
    "dev": "tsx watch src/server.ts",
    "lint": "eslint src",
    "build": "tsc",
    "start": "node build/fastify/src/server.js"
  },
  "dependencies": {
    "@fastify/cors": "^8.5.0",
    "@ts-rest/fastify": "^3.51.0",
    "better-auth": "^1.1.15",
    "cross-env": "^7.0.3",
    "dotenv-expand": "^12.0.1",
    "dotenv-flow": "^4.1.0",
    "drizzle-orm": "^0.39.0",
    "fastify": "^4.29.0",
    "fastify-metrics": "^11.0.0",
    "pg": "^8.13.1",
    "uuid": "^11.0.5",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.19.0",
    "@types/node": "^22.12.0",
    "@types/pg": "^8.11.11",
    "drizzle-kit": "^0.30.3",
    "eslint": "^9.19.0",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.22.0"
  }
}
