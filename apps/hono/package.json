{
  "name": "hono",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "tsx watch ./src/server.ts",
    "lint": "eslint ./src --config ./eslint.config.mjs",
    "test": "cross-env NODE_ENV=test vitest --config ./vitest.config.ts",
    "build": "tsc",
    "better-auth:generate": "cross-env NODE_ENV=development npx @better-auth/cli generate --config ./src/config/newAuth.ts --output ./src/api/auth/auth.schema.ts",
    "postgres:generate": "cross-env NODE_ENV=development drizzle-kit generate --config ./drizzle.config.ts",
    "postgres:migrate": "cross-env POSTGRES_MIGRATING=true drizzle-kit push --config ./drizzle.config.ts"
  },
  "dependencies": {
    "@hono/node-server": "^1.13.8",
    "@hono/zod-openapi": "^0.18.4",
    "@hono/zod-validator": "^0.4.2",
    "@react-email/components": "^0.0.33",
    "better-auth": "^1.1.18",
    "cross-env": "^7.0.3",
    "dotenv-expand": "^12.0.1",
    "dotenv-flow": "^4.1.0",
    "drizzle-orm": "^0.39.3",
    "hono": "^4.6.20",
    "hono-pino": "^0.7.2",
    "ioredis": "^5.5.0",
    "nodemailer": "^6.10.0",
    "pg": "^8.13.3",
    "pino": "^9.6.0",
    "react": "^19.0.0",
    "uuid": "^11.0.5",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@better-auth/cli": "^1.1.18",
    "@eslint/js": "^9.20.0",
    "@testcontainers/postgresql": "^10.18.0",
    "@testcontainers/redis": "^10.18.0",
    "@types/node": "^20.11.17",
    "@types/pg": "^8.11.11",
    "drizzle-kit": "^0.30.4",
    "eslint": "^9.20.1",
    "globals": "^15.15.0",
    "tsx": "^4.7.1",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.24.0",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.0.5"
  },
  "packageManager": "pnpm@9.15.4"
}
