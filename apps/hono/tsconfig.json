{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "esModuleInterop": true,
    "baseUrl": "./",
    "paths": { "@/*": ["./src/*"] },
    "strict": true,
    "typeRoots": ["./node_modules/@types"],
    "types": ["node"],
    "jsx": "react",
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "outDir": "./build"
  },
  "tsc-alias": {
    "resolveFullPaths": true
  },
  "include": ["./src"],
  "exclude": [
    "./src/test",
    "./src/lib/better-auth/schema.ts",
    "./src/api/api.test.ts",
    "./src/api/auth/auth.test.ts"
  ]
}
